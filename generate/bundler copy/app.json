{
    "packagename": "all",
    "buildfolder": "build",
    "manifestfolder": "manifest",

    "name": "bundler",
    "framework": "ext",
    "toolkit": "modern",
    "theme": "theme-material",

    "output": {
        "base": "./build/${app.packagename}",
        "resources": {
            "path": "./"
        }
    },
    "css": [
        {
            "path": "${build.out.css.path}",
            "bundle": true,
            "exclude": ["fashion"]
        }
    ],
    "production": {
        "output": {
            "appCache": {
                "enable": true,
                "path": "cache.appcache"
            }
        },
        "loader": {
            "cache": "${build.timestamp}"
        },
        "cache": {
            "enable": true
        }
    }
}
